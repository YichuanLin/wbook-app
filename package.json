{
  "name": "wbook-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "react-scripts build",
    "eject": "react-scripts eject",
    "format": "npm run format:eslint && npm run format:prettier && npm run format:package",
    "format:eslint": "eslint --ext .js,.jsx,.html,.md,.json . --fix --ignore-path .gitignore",
    "format:package": "sort-package-json package.json",
    "format:prettier": "prettier \"**/*.+(js|jsx|js|html|md)\" --write --ignore-path .gitignore",
    "lint": "npm run lint:eslint && npm run lint:prettier",
    "lint:eslint": "eslint --ext .js,.jsx,.html,.md,.json . --ignore-path .gitignore",
    "lint:prettier": "prettier \"**/*.+(js|jsx|js|html|md)\" --check --ignore-path .gitignore",
    "start": "react-scripts start",
    "test": "react-scripts test"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.+(js|jsx|js|html|md)": [
      "prettier --write --ignore-path .gitignore",
      "eslint --fix --ignore-path .gitignore"
    ],
    "package.json": [
      "sort-package-json"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "prettier": "@open-wc/prettier-config",
  "eslintConfig": {
    "settings": {
      "import/resolver": {
        "webpack": {
          "config": {
            "resolve": {
              "modules": [
                "node_modules"
              ]
            }
          }
        }
      }
    },
    "plugins": [
      "markdown",
      "json"
    ],
    "extends": [
      "react-app",
      "plugin:prettier/recommended",
      "plugin:json/recommended"
    ]
  },
  "dependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "node-sass": "^4.13.1",
    "react": "^16.13.0",
    "react-dom": "^16.13.0",
    "react-scripts": "3.4.0"
  },
  "devDependencies": {
    "@open-wc/eslint-config": "^2.0.0",
    "@open-wc/prettier-config": "^0.1.0",
    "eslint": "^6.0.0",
    "eslint-import-resolver-webpack": "^0.12.0",
    "eslint-plugin-markdown": "^1.0.0",
    "husky": "^4.0.0",
    "lint-staged": "^10.0.0",
    "sort-package-json": "^1.0.0"
  }
}
